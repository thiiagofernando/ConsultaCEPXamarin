<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App01_ConsultarCEP"
             x:Class="App01_ConsultarCEP.MainPage">

    <StackLayout BackgroundColor="#FFFF" Padding="30" Spacing="10">
        <Image Source="correioslogo.png" x:Name="LOGO" Margin="50" />
        <Entry Placeholder="Digite o seu  CEP" PlaceholderColor="#FFBF00" BackgroundColor="#FFFFFF" x:Name="CEP" Keyboard="Numeric"/>
        <Button Text="Buscar CEP" TextColor="#FFFFFF" BackgroundColor="#00416B" x:Name="ENVIAR"/>
        <Label Text="" x:Name="RESULTADO"
           HorizontalOptions="Center"
           VerticalOptions="Center" />
    </StackLayout>
</ContentPage>
